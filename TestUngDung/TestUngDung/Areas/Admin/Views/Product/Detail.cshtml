
@model ModelEF.Model.Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Edit", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationMessage("ThongBaoLoi")
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Chi tiết sản phẩm <span>
                        @Html.DisplayFor(model => model.Name)
                    </span>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label>Category</label><br />
                                        @Html.DropDownListFor(model => model.CategoryId, null, new {
                                       htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label>Name</label>
                                        <br />
                                        @*@Html.TextBoxFor(model => model.Name, new {
                                            htmlAttributes = new { @class = "form-control", disabled = "disabled" } })*@
                                        @Html.TextBoxFor(model => model.Name, new { disabled = "disabled" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label>Price</label>
                                        <br />
                                        @String.Format("{0:#,##0₫}", Model.UniCost, new { disabled = "disabled" })
                                        @*@Html.TextBoxFor(model => model.UniCost, new { disabled = "disabled" })*@
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label>Status</label>
                                        <br />
                                        @Html.TextBoxFor(model => model.Status, new { disabled = "disabled" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label>Image</label>
                                        <br />
                                        <img src="@Html.DisplayFor(model => model.Image)" style="width:100px" alt="Alternate Text" />

                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label>Quantity</label>
                                        <br />
                                        @Html.TextBoxFor(model => model.Quantity, new { disabled = "disabled" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label>Description</label>
                                        <br />
                                        @Html.TextBoxFor(model => model.Description, new { disabled = "disabled" })
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div>
    <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Back to list</a>
</div>

