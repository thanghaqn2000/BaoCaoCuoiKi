
@model ModelEF.Model.Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật người dùng</h2>
@using (Html.BeginForm("Edit", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationMessage("ThongBaoLoi")
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Mời bạn nhập đầy đủ các thông tin
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label>Category</label><br />
                                        @Html.DropDownListFor(model => model.CategoryId, null, new {
                                       htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label>Name</label>
                                        @Html.EditorFor(model => model.Name, new {
                                        htmlAttributes = new { @class = "form-control" } })

                                        @Html.ValidationMessageFor(model => model.Name,
                                        "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label>Price</label>
                                        @Html.EditorFor(model => model.UniCost, new {
                                        htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.UniCost,
                                        "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label>Status</label>
                                        @Html.EditorFor(model => model.Status, new {
                                        htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Status,
                                        "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label>Image</label>
                                        @Html.EditorFor(model => model.Image, new {
                                        htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Image,
                                        "", new { @class = "text-danger" })
                                        
                                        <img src="@Html.DisplayFor(model => model.Image)" style="height:300px" alt="Alternate Text" />
                                     
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label>Quantity</label>
                                        @Html.EditorFor(model => model.Quantity, new {
                                        htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Quantity,
                                        "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label>Description</label>
                                        @Html.EditorFor(model => model.Description, new {
                                        htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Description,
                                        "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </form>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit"  style="margin-top:30px" onclick="return confirm('Are u sure to update this product?')" value="Update" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div>
    <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Back to list</a>
</div>

